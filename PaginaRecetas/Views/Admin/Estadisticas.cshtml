@{
    ViewData["Title"] = "Administración";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<div class="admin-container">
    <header class="admin-header">
        <h1>ADMINISTRACIÓN</h1>
    </header>

    <div class="sidebar">
        <ul>
            <li><a asp-area="" asp-controller="Admin" asp-action="Estadisticas">Estadísticas</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="GestionUs">Gestión de usuarios</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="GestionElDest">Gestión de elementos destacados</a></li>
            <li class="submenu">
                <a id="gestionFiltros" asp-area="" asp-controller="Admin" asp-action="GestionFlt">Gestión de Filtros</a>
                <ul class="submenu-items">
                    <li><a asp-area="" asp-controller="Admin" asp-action="FiltroTipo">Tipo</a></li>
                    <li><a asp-area="" asp-controller="Admin" asp-action="FiltroComplejidad">Complejidad</a></li>
                    <li><a asp-area="" asp-controller="Admin" asp-action="FiltroTiempo">Tiempo</a></li>
                    <li><a asp-area="" asp-controller="Admin" asp-action="FiltroRegion">Región</a></li>
                </ul>
            </li>
            <li><a asp-area="" asp-controller="Admin" asp-action="Reportes">Reportes</a></li>
            <li><a asp-area="" asp-controller="Admin" asp-action="RectNuevas">Recetas nuevas</a></li>
        </ul>
    </div>

    <main class="main-content">
        <div class="filter">
            <label for="filter">Filtrar por:</label>
            <select id="filter">
                <option value="Hoy">Hoy</option>
                <option value="Semana">Esta semana</option>
                <option value="Mes">Este mes</option>
            </select>
        </div>

        <div class="stats">
            <div class="stat-box">
                <span>Visitantes</span>
                <h2>--</h2>
            </div>
            <div class="stat-box">
                <span>Registros</span>
                <h2>--</h2>
            </div>
        </div>

        <div class="charts">
            <div class="chart">
                <h3>Categorías más visitadas</h3>
                <canvas id="categoriasChart"></canvas>
            </div>
            <div class="chart">
                <h3>Recetas populares</h3>
                <canvas id="recetasChart"></canvas>
            </div>
        </div>

        <div class="lists">
            <div class="list-box">
                <h3>Recetas más guardadas</h3>
                <ul>
                    <li>Sin datos disponibles</li>
                </ul>
            </div>
            <div class="list-box">
                <h3>Recetas más favoritas</h3>
                <ul>
                    <li>Sin datos disponibles</li>
                </ul>
            </div>
        </div>


    </main>
</div>