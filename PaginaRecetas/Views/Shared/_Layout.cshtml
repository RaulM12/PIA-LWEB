<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PaginaRecetas</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/cuenta.js"></script>
    <link rel="stylesheet" href="~/PaginaRecetas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container">
            <!-- Logo alineado a la izquierda -->

            <a class="navbar-link" href="/" style="font-size: 25px; color: #333;">
                <i class="fa-solid fa-utensils"></i>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <!-- Opciones alineadas a la derecha -->
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home/Sobre">Sobre</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cuenta/login">Log in</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cuenta/Signin">Sign in</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cuenta/Cuenta" style="font-size: 20px">
                            <i class="fa-solid fa-circle-user"></i>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <!-- Pie de página -->
    <footer class="footer custom-footer">
        <div class="container text-center">
            <p>&copy; 2024 - PaginaRecetas</p>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>